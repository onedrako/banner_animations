}

.logo
    // background-image: url(https://logos-marcas.com/wp-content/uploads/2020/11/Twitch-Emblema.png)
    // background-repeat: no-repeat
    // background-size: cover
    // background-position: center
    height: 100px
    &--bigger
        height: 150px
    &--option2
        height: 135px

.banner
    display: flex
    flex-direction: row
    width: 600px
    height: 125px
    position absolute
    top: 36px 
    // background: #161616
    background: black  
    border-top: solid white 5px
    left: -510px
    // left: 0
    animation-name: extend
    animation-duration: 8s
    // animation-iteration-count: infinite
    // animation-delay: 5s
    &__info
        display: grid
        grid-template-columns: repeat(5, 1fr)
        grid-template-rows: repeat(2, 1fr)
        width: 515px
        &--info-description
            grid-column-start: 2
            grid-column-end: 7
            grid-row-start: 1
            grid-row-end: 2
            color: white
            text-align: right
            font-size: 1.8rem
        &--name-description
            grid-column-start: 2
            grid-column-end: 7
            grid-row-start: 2
            grid-row-end: 3
            color: white
            text-align: right
            font-size: 1.8rem
    &__corner
        width: 85px
        height: 1205px
        // background: orange
        background: 
            linear-gradient(125deg, black  50%, transparent 50%) 100px 0px
        background-size: 265px 335px;
        position: relative
        left 85px
        bottom 5px
        border-top: solid white 5px


@keyframes extend{
    0%{
        }
    15%{
        left 75px 
        }

    85%{
        left 75px 
        }

    100%{
        left -510px 
        }
